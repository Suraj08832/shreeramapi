modules = ["nodejs-20", "bun"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["yt-dlp"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 bun run --hot src/index.ts"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36807
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bun", "dist/server.js"]
build = ["bun", "run", "build"]
